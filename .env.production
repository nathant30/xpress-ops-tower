# RBAC Production Environment Configuration
# Generated during deployment - $(date)

# Database Configuration
DATABASE_URL=postgresql://ops_tower_user:secure_password_change_me@localhost:5432/ops_tower_production
DATABASE_SSL=true
POSTGRES_DB=ops_tower_production
POSTGRES_USER=ops_tower_user
POSTGRES_PASSWORD=secure_password_change_me

# RBAC Configuration  
RBAC_ENABLED=true
RBAC_APPROVAL_TTL_HOURS=4
RBAC_ENABLE_MONITORING=true
RBAC_AUDIT_ENABLED=true
RBAC_MAX_VERSIONS_PER_ROLE=25

# JWT Security
JWT_SECRET_KEY=CHANGE_ME_IN_PRODUCTION_use_crypto_random_32_bytes
AUTHZ_TEST_JWT_SECRET=test_development_key_change_for_production

# Security Configuration
SECURITY_LOG_LEVEL=info
SECURITY_HEADERS_ENABLED=true
CORS_ALLOWED_ORIGINS=https://ops-tower.company.com,https://admin.company.com
SESSION_TIMEOUT_MINUTES=480

# MFA Configuration
MFA_ENABLED=true
MFA_BACKUP_CODES_COUNT=8
MFA_RATE_LIMIT_ATTEMPTS=5
MFA_RATE_LIMIT_WINDOW_MINUTES=15

# Monitoring & Alerting
PROMETHEUS_ENABLED=true
GRAFANA_DASHBOARD_ENABLED=true
ALERT_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
PAGERDUTY_SERVICE_KEY=YOUR_PAGERDUTY_SERVICE_KEY

# Performance Configuration
RBAC_CACHE_TTL_MINUTES=5
API_RATE_LIMIT_PER_MINUTE=1000
EXPORT_MAX_ROLES_PER_REQUEST=1000
DB_CONNECTION_POOL_MAX=20
DB_CONNECTION_POOL_MIN=5

# Feature Flags
FEATURE_ROLE_MATRIX_VIEW=true
FEATURE_BULK_OPERATIONS=true
FEATURE_ROLE_VERSIONING=true
FEATURE_EXPORT_FUNCTIONALITY=true
FEATURE_APPROVAL_WORKFLOWS=true

# Development vs Production
NODE_ENV=production
DEBUG=false
LOG_LEVEL=info