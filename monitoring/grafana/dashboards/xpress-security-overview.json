{
  "dashboard": {
    "id": null,
    "title": "Xpress Security Overview",
    "tags": ["xpress", "security"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "üö® Critical Security Alerts",
        "type": "stat",
        "targets": [
          {
            "expr": "ALERTS{alertstate=\"firing\",severity=\"critical\"}",
            "legendFormat": "Critical Alerts"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "red", "value": 1}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "üîê Authentication Failures",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(auth_failed_total[5m])",
            "legendFormat": "Failed Logins/sec"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 6, "y": 0}
      },
      {
        "id": 3,
        "title": "üö® SOS System Status",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"sos-service\"}",
            "legendFormat": "SOS Service"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"type": "value", "value": "1", "text": "üü¢ ONLINE"},
              {"type": "value", "value": "0", "text": "üî¥ OFFLINE"}
            ]
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0}
      },
      {
        "id": 4,
        "title": "üåê Network Security Events",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(waf_blocked_requests_total[5m])",
            "legendFormat": "WAF Blocks/sec"
          },
          {
            "expr": "rate(http_requests_total[1m])",
            "legendFormat": "Total Requests/sec"
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 8}
      },
      {
        "id": 5,
        "title": "üìä Data Access Monitoring",
        "type": "table",
        "targets": [
          {
            "expr": "increase(personal_data_access_total[1h])",
            "legendFormat": "Personal Data Access"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 6,
        "title": "üîç Database Security",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(database_connections_failed_total[5m])",
            "legendFormat": "Failed DB Connections"
          },
          {
            "expr": "database_unauthorized_queries_total",
            "legendFormat": "Unauthorized Queries"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16}
      }
    ]
  }
}