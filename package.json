{
  "name": "xpress-ops-tower",
  "version": "1.0.0",
  "description": "Real-time operations command center with XPRESS Design System integration",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "xpress:check": "node scripts/xpress-check.js",
    "xpress:enforce": "node scripts/xpress-enforce.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern='src/.*\\.test\\.(ts|tsx|js|jsx)$'",
    "test:integration": "jest --testPathPattern='__tests__/integration'",
    "test:emergency": "jest --testPathPattern='sosAlertProcessor|websocket' --verbose",
    "test:database-performance": "node __tests__/database/performance-tests.js",
    "test:e2e": "playwright test",
    "test:e2e:emergency": "playwright test __tests__/e2e/emergency-workflows.spec.ts",
    "test:load": "node __tests__/load/runLoadTests.js",
    "test:security": "node security/security-scanner.js",
    "db:migrate": "node scripts/db-migrate.js",
    "db:seed": "node scripts/db-seed.js",
    "db:backup": "node scripts/db-backup.js",
    "monitoring:start": "node monitoring/metrics-dashboard.js",
    "monitoring:performance": "node monitoring/performance-monitor.js",
    "deploy:staging": "scripts/deploy.sh --environment staging",
    "deploy:production": "scripts/deploy.sh --environment production",
    "deploy:emergency": "scripts/deploy.sh --environment production --emergency",
    "rollback:production": "scripts/deploy.sh --environment production --rollback",
    "security:scan": "node security/security-scanner.js",
    "performance:monitor": "node monitoring/performance-monitor.js",
    "audit:security": "npm audit && node security/security-scanner.js",
    "audit:performance": "npm run test:load && npm run monitoring:performance",
    "prepare": "husky install"
  },
  "dependencies": {
    "@googlemaps/google-maps-services-js": "^3.4.2",
    "@googlemaps/js-api-loader": "^1.16.10",
    "@googlemaps/markerclusterer": "^2.6.2",
    "@hookform/resolvers": "^3.9.0",
    "@sendgrid/mail": "^8.1.5",
    "@types/nodemailer": "^7.0.1",
    "@types/twilio": "^3.19.2",
    "axios": "^1.7.2",
    "axios-retry": "^4.5.0",
    "bcryptjs": "^2.4.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "date-fns": "^3.6.0",
    "date-fns-tz": "^3.1.3",
    "fast-xml-parser": "^5.2.5",
    "framer-motion": "^11.3.8",
    "ioredis": "^5.4.1",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.414.0",
    "next": "^14.2.5",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.5",
    "pg": "^8.12.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.52.1",
    "react-query": "^3.39.3",
    "recharts": "^2.12.7",
    "redis": "^4.7.0",
    "socket.io": "^4.7.5",
    "socket.io-client": "^4.7.5",
    "supercluster": "^8.0.1",
    "tailwind-merge": "^2.4.0",
    "twilio": "^5.8.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.13",
    "@testing-library/jest-dom": "^6.4.8",
    "@testing-library/react": "^16.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.14.12",
    "@types/pg": "^8.11.6",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.17.0",
    "@typescript-eslint/parser": "^7.17.0",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.5",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "husky": "^9.1.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.7",
    "postcss": "^8.4.40",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.5",
    "tailwindcss": "^3.4.6",
    "typescript": "^5.5.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "node scripts/xpress-check.js"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "nextjs",
    "typescript",
    "tailwindcss",
    "xpress-design-system",
    "operations-dashboard",
    "real-time"
  ]
}
